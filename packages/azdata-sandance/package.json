{
    "name": "azdata-sanddance",
    "displayName": "azdata-sanddance",
    "description": "SandDance viewer",
    "version": "0.2.190",
    "publisher": "danmarshall",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/Sanddance"
    },
    "engines": {
        "vscode": "^1.28.0",
        "sqlops": "*"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:sandance.view"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "sandance.view",
                "title": "View in SandDance"
            }
        ],
        "languages": [
            {
                "id": "csv",
                "extensions": [
                    ".csv"
                ]
            },
            {
                "id": "tsv",
                "extensions": [
                    ".tsv"
                ]
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "sandance.view",
                    "when": "false"
                }
            ],
            "explorer/context": [
                {
                    "command": "sandance.view",
                    "when": "resourceLangId == csv"
                },
                {
                    "command": "sandance.view",
                    "when": "resourceLangId == tsv"
                }
            ],
            "objectExplorer/item/context": [
                {
                    "command": "sandance.view",
                    "when": "nodeType=~/^mssqlCluster/ && nodeLabel=~/[^\\s]+(\\.(csv|tsv))$/ && nodeType == mssqlCluster:file"
                }
            ]
        }
    },
    "scripts": {
        "clean": "rimraf ./resources/*.*",
        "vscode:prepublish": "npm run compile",
        "resources": "node ./resources",
        "deploy": "parcel build ./src/ui/sanddance-explorer.js --global SandDanceExplorer --no-minify --out-dir ./resources/",
        "build-css": "node-sass ./src/ui/css -o ./resources",
        "compile-ui": "tsc -p ./src/ui",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "build": "npm run compile && npm run compile-ui && npm run build-css && npm run resources && npm run deploy",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "postinstall": "node ./node_modules/vscode/bin/install && node ./node_modules/sqlops/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "@types/react": "16.4.7",
        "deck.gl": "6.3.2",
        "luma.gl": "6.3.2",
        "react": "^16.6.0",
        "react-dom": "^16.6.0",
        "typescript": "^2.6.1",
        "@msrvida/sanddance-explorer": "^1.0.0",
        "vega-lib": "^4.3.0",
        "vscode": "^1.1.21",
        "office-ui-fabric-react": "^6.136.0",
        "sqlops": "github:anthonydresser/sqlops-extension-sqlops"
    },
    "dependencies": {
        "@types/temp-write": "^3.3.0",
        "temp-write": "^3.4.0"
    }
}
